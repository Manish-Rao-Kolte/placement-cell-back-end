<html lang="en" class="h-full bg-white">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register-Company</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="h-full" style="font-family: 'Poppins', sans-serif; font-weight: 400; font-style: normal;">
  <%- include("navbar") %>
    <div class="flex flex-col justify-center px-6 py-16 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
          <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Add a company</h2>
        </div>
        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
          <form class="space-y-6" action="/api/v1/companies/register" method="POST">
            <div>
              <label for="name" class="block text-sm font-semibold leading-6 text-gray-900">Company Name*</label>
              <div class="mt-2">
                <input id="name" name="name" type="text" autocomplete="name" placeholder="Google Inc.." required class="block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
              </div>
            </div>
            <div>
              <label for="companyCode" class="block text-sm font-semibold leading-6 text-gray-900">Company Code*</label>
              <div class="mt-2">
                <input id="companyCode" name="companyCode" type="text" autocomplete="companyCode" placeholder="abc123" required class="block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
              </div>
            </div>
            <div>
                <label for="phone" class="block text-sm font-semibold leading-6 text-gray-900">Phone</label>
                <div class="mt-2">
                  <input id="phone" name="phone" type="tel" autocomplete="phone" maxlength="10" minlength="10" class="block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                </div>
              </div>
            <div>
              <label for="address" class="block text-sm font-semibold leading-6 text-gray-900">Address</label>
              <div class="mt-2">
                <textarea id="address" name="address" autocomplete="address" class="block w-full h-28 rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"> </textarea>
              </div>
            </div>                       
            </div>
            <div>
              <button type="submit" class="flex w-full sm:w-96 sm:mx-auto justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"> Register Company
              </button>
            </div>
          </form>
        </div>
      </div>
</body>
</html>